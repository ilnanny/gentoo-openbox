#sleep 2; clipit &
sleep 2; parcellite &

#  --  --  --  --  --  --  --  --  --  --  --  --  -- > Terminale DropDown.

sleep 3; xfce4-terminal --drop-down

#  --  --  --  --  --  --  --  --  --  --  --  --  -- > Radio Deejay.

sleep 4; vlc /home/ilnanny/bin/radio_deejay.m3u8 &

