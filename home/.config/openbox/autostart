sleep 1; conky --daemonize

#  --  --  --  --  --  --  --  --  --  --  --  --  --  --  -- >  Cache di Digitazione

sleep 2; parcellite &

#  --  --  --  --  --  --  --  --  --  --  --  --  --  --  -- >  Terminale DropDown

sleep 3; xfce4-terminal --drop-down

#  --  --  --  --  --  --  --  --  --  --  --  --  --  --  -- >  Radio Deejay

