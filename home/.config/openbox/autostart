#sleep 2; xfce4-panel &
#sleep 2; tint2-session --start &
#sleep 2; polybar-session &

#  --  --  --  --  --  --  --  --  --  --  --  --  --  --  -- >  Icona Volume.

#sleep 4; volumeicon &
sleep 4; pnmixer &

#  --  --  --  --  --  --  --  --  --  --  --  --  --  --  -- >  Tastierino numerico.

sleep 1; numlockx &

#  --  --  --  --  --  --  --  --  --  --  --  --  --  --  -- >  Icona Rete.

sleep 2; nm-applet --sm-disable &

#  --  --  --  --  --  --  --  --  --  --  --  --  --  --  -- >  Aggiorna nomi cartelle

sleep 3; xdg-user-dirs-gtk-update &

