#  --  --  --  --  --  --  --  --  --  --  --  --  -- > Pannelli-Dock.

sleep 2; tint2 -c ~/.config/tint2/transoriz.tint2rc &
sleep 2; tint2 -c ~/.config/tint2/transvert.tint2rc &
#sleep 2; xfce4-panel &
#sleep 2; tint2-session --start &
#sleep 2; polybar-session &

#  --  --  --  --  --  --  --  --  --  --  --  --  -- > Icona Volume.

#sleep 4; volumeicon &
sleep 4; pnmixer &

#  --  --  --  --  --  --  --  --  --  --  --  --  -- > NumLock ON.

sleep 1; numlockx &

#  --  --  --  --  --  --  --  --  --  --  --  --  -- > Icona Rete.

sleep 2; nm-applet --sm-disable &

#  --  --  --  --  --  --  --  --  --  --  --  --  -- > Notifiche
exec dunst &

#  --  --  --  --  --  --  --  --  --  --  --  --  -- > Super-Key

#ksuperkey -e 'Super_L=Alt_L|F1' &
#ksuperkey -e 'Super_R=Alt_L|F1' &

#  --  --  --  --  --  --  --  --  --  --  --  --  -- > Beep di sistema

xset b off

#  --  --  --  --  --  --  --  --  --  --  --  --  -- > Impostazioni X.

xrdb -merge .Xresources

#  --  --  --  --  --  --  --  --  --  --  --  --  -- > Nomi Cartelle

sleep 3; xdg-user-dirs-gtk-update &

#  --  --  --  --  --  --  --  --  --  --  --  --  -- > Desktop Virtuali

#skippyrc --config ~/.skippyrc --start-daemon &

