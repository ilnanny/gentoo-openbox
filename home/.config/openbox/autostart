xfsettingsd &

#  --  --  --  --  --  --  --  --  --  --  --  --  --  --  -- >  Sfondo Desktop.

#feh --bg-scale /usr/share/backgrounds/${WALLPAPER} &
#WALLPAPER="rockyduck.png"
nitrogen --restore &

#  --  --  --  --  --  --  --  --  --  --  --  --  --  --  -- >  Trasparenze.
#compositor --start &
